extends layout

block content
    .container
        h1 #{title}
        ul.errors
            if errors
                each error, i in errors
                    li.alert.alert-danger #{error.msg}
        form(method='post', action='/articles/edit/'+article._id)
            .form-group
                label Title :
                input.form-control(name='title', type='text', value=article.title)
            .form-group
                label Subtitle :
                input.form-control(name='subtitle', type='subtitle', value=article.subtitle)
            .form-group
                label Category:
                select.form-control(name='category')
                    each category, i in categories
                        if(category._id == article.category)
                            option(value=category._id, selected) #{category.title}
                        else
                            option(value=category._id) #{category.title}
            .form-group
                label Author :
                input.form-control(name='author', type='author', value=article.author)
            .form-group
                label Body :
                textarea.form-control(name='body') #{article.body}
            input.btn.btn-primary(type='submit', name='submit', value='Save')
            a.btn.btn-default(href='/manage/articles') Back
            a.btn.btn-danger.article-delete.pull-right(href='/manage/articles', data-art-id=article._id) Delete

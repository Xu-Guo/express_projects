extends layout

block content
    .container
        .row
            .col-md-9
                h1 #{title}
            .col-md-3
                a(class='btn btn-primary create-btn', href='/manage/articles/add') Write New Article
    br
    .container
        table(class='table table-striped')
            tr
                th Article Title
                th Published Date
                th Author
                th
            each article, i in articles
                tr
                    td #{article.title}
                    td #{moment(article.created_at).format('MMMM Do YYYY, h:mm:ss a')}
                    td #{article.author}
                    td
                        a(class='btn btn-tiny btn-primary' href='/manage/articles/edit/'+article._id) Edit

<% include ../views/partials/header %>
    <form method="post" action="/todo/edit/<%= todo._id%>">
        <div>
            <label>Todo Name</label>
            <input type="text" name="text" placeholder="Edit Todo" value="<%= todo.text%>">
        </div>
        <div>
            <label>Todo Body</label>
            <textarea name="body" placeholder="Edit Body"><%= todo.body %></textarea>
        </div>
        <button type="submit">Submit</button><a href='/'>Cancel</a>
    </form>
<% include ../views/partials/footer %>
